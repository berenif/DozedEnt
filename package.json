{
  "name": "dozedent",
  "version": "1.0.0",
  "description": "WASM-first multiplayer survival game",
  "main": "public/src/utils/index.js",
  "module": "public/src/utils/index.js",
  "type": "module",
  "types": "public/src/utils/index.d.ts",
  "exports": {
    ".": "./public/src/utils/index.js",
    "./firebase": "./public/src/netcode/firebase.js",
    "./ipfs": "./public/src/netcode/ipfs.js",
    "./mqtt": "./public/src/netcode/mqtt.js",
    "./nostr": "./public/src/netcode/nostr.js",
    "./supabase": "./public/src/netcode/supabase.js",
    "./torrent": "./public/src/netcode/torrent.js",
    "./wasm": "./public/src/utils/wasm.js"
  },
  "private": true,
  "engines": {
    "node": ">=20"
  },
  "author": {
    "name": "DozedEnt Team"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/berenif/DozedEnt.git"
  },
  "license": "MIT",
  "dependencies": {
    "@noble/secp256k1": "^3.0.0",
    "@supabase/supabase-js": "^2.49.8",
    "@waku/discovery": "^0.0.11",
    "@waku/sdk": "^0.0.34",
    "firebase": "^12.2.1",
    "libp2p": "^2.8.8",
    "mqtt": "^5.13.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.27.0",
    "@playwright/test": "^1.52.0",
    "@rollup/plugin-commonjs": "^28.0.2",
    "@rollup/plugin-node-resolve": "^16.0.0",
    "@rollup/plugin-replace": "^6.0.2",
    "@rollup/plugin-terser": "^0.4.4",
    "c8": "^10.1.3",
    "chai": "^6.0.1",
    "chalk": "^5.6.0",
    "eslint": "^9.27.0",
    "globals": "^16.4.0",
    "mocha": "^11.7.2",
    "nyc": "^17.1.0",
    "playwright": "^1.52.0",
    "prettier": "^3.5.2",
    "proxy-check": "^1.0.8",
    "puppeteer": "^24.18.0",
    "rollup": "^4.49.0",
    "serve": "^14.2.4",
    "sinon": "^21.0.0",
    "stun": "^1.1.0",
    "to-ico": "^1.0.1",
    "ws": "^8.18.2"
  },
  "scripts": {
    "prebuild": "node tools/scripts/pre-build-check.js",
    "build": "node tools/scripts/enhanced-build.js",
    "build:core": "rollup -c tools/config/rollup.config.js",
    "build:animations": "rollup -c tools/config/rollup.config.animations.js",
    "build:wolf": "rollup -c tools/config/rollup.config.wolf.js",
    "build:dev": "NODE_ENV=development npm run build",
    "build:public": "node tools/scripts/build-public.js",
    "build:public:symlinks": "node tools/scripts/build-public-symlinks.js",
    "build:public:minimal": "node tools/scripts/build-public-minimal.js",
    "copy:public": "node tools/scripts/build-public.js",
    "build:all": "npm run build",
    "build:check": "node tools/scripts/pre-build-check.js",
    "build:validate": "node tools/scripts/build-validator.js",
    "build:organize": "node tools/scripts/dist-organizer.js",
    "validate:github-pages": "node tools/scripts/validate-github-pages.js",
    "validate:public-deployment": "node tools/scripts/validate-public-deployment.js",
    "validate:protocol-versions": "node tools/scripts/validate-protocol-versions.js",
    "deploy:build": "npm run wasm:build && npm run build:all && npm run build:public",
    "deploy:validate": "npm run validate:github-pages",
    "deploy:validate:public": "npm run validate:public-deployment",
    "deploy:validate:protocols": "npm run validate:protocol-versions",
    "balance:gen": "node tools/scripts/generate-balance.cjs",
    "wasm:build": "bash tools/scripts/build-wasm.sh prod || powershell -ExecutionPolicy Bypass -File tools/scripts/build-wasm.ps1 prod",
    "wasm:build:dev": "bash tools/scripts/build-wasm.sh dev || powershell -ExecutionPolicy Bypass -File tools/scripts/build-wasm.ps1 dev",
    "wasm:build:host": "bash tools/scripts/build-wasm.sh host || powershell -ExecutionPolicy Bypass -File tools/scripts/build-wasm.ps1 host",
    "wasm:build:all": "bash tools/scripts/build-wasm.sh all || powershell -ExecutionPolicy Bypass -File tools/scripts/build-wasm.ps1 all",
    "wasm:build:win": "powershell -ExecutionPolicy Bypass -File tools/scripts/build-wasm.ps1 prod",
    "wasm:build:win:dev": "powershell -ExecutionPolicy Bypass -File tools/scripts/build-wasm.ps1 dev",
    "wasm:build:win:host": "powershell -ExecutionPolicy Bypass -File tools/scripts/build-wasm.ps1 host",
    "wasm:build:win:all": "powershell -ExecutionPolicy Bypass -File tools/scripts/build-wasm.ps1 all",
    "wasm:clean": "rm -f *.wasm",
    "wasm:exports": "node tools/scripts/generate-wasm-exports.js",
    "wasm:setup": "bash -c 'source ./emsdk/emsdk_env.sh && em++ --version'",
    "get-bundle-sizes": "node tools/scripts/get-bundle-sizes.js",
    "optimize:performance": "node tools/scripts/performance-optimizer.js",
    "optimize:bundle": "node -e \"import('./public/src/utils/dead-code-eliminator.js').then(m => console.log('Bundle optimization available'))\"",
    "optimize:memory": "node -e \"import('./public/src/utils/memory-optimizer.js').then(m => console.log('Memory optimization available'))\"",
    "lint": "npx eslint public/src/ test/ --config tools/config/eslint.config.js",
    "test": "playwright test --config tools/config/playwright.config.js",
    "test-proxy": "PROXY=$(node tools/scripts/find-proxy.js) npm run test",
    "test-ice": "node tools/scripts/test-ice.js",
    "test-relays": "node tools/scripts/test-relays.js",
    "test:unit": "mocha 'test/unit/**/*.test.js' --recursive --timeout 5000",
    "test:unit:watch": "mocha 'test/unit/**/*.test.js' --recursive --watch --timeout 5000",
    "test:unit:debug": "mocha 'test/unit/**/*.test.js' --recursive --timeout 10000 --inspect-brk",
    "test:coverage": "c8 --reporter=text --reporter=html --reporter=lcov npm run test:unit",
    "test:coverage:report": "c8 report --reporter=html",
    "test:coverage:check": "c8 check-coverage --statements 80 --branches 75 --functions 80 --lines 80",
    "test:build": "mocha 'test/unit/build.test.js' 'test/unit/dependencies.test.js'",
    "test:github-pages": "mocha 'test/unit/github-pages-deployment.test.js'",
    "test:all": "npm run test:unit && npm run test:coverage:check",
    "dev": "node tools/scripts/server.js",
    "serve": "npm run dev",
    "serve:public": "npx http-server public -p 8080 -c-1 --cors",
    "serve:simple:public": "cd public && python -m http.server 8080",
    "validate:filesize": "node tools/scripts/check-file-sizes.js"
  },
  "keywords": [
    "webrtc",
    "p2p",
    "peer to peer",
    "chat",
    "pairing",
    "matchmaking",
    "serverless",
    "torrent",
    "bittorrent",
    "webtorrent",
    "ipfs",
    "mqtt",
    "firebase",
    "realtime",
    "decentralized",
    "signaling",
    "pairing",
    "react",
    "supabase"
  ]
}
