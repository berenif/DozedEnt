{
  "name": "trystero",
  "version": "0.21.8",
  "description": "Serverless WebRTC matchmaking for painless P2P",
  "main": "src/index.js",
  "module": "src/index.js",
  "type": "module",
  "types": "src/index.d.ts",
  "exports": {
    ".": "./src/index.js",
    "./firebase": "./src/firebase.js",
    "./ipfs": "./src/ipfs.js",
    "./mqtt": "./src/mqtt.js",
    "./nostr": "./src/nostr.js",
    "./supabase": "./src/supabase.js",
    "./torrent": "./src/torrent.js",
    "./wasm": "./src/wasm.js"
  },
  "author": {
    "name": "Dan Motzenbecker",
    "email": "dan@oxism.com",
    "url": "https://oxism.com"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/dmotz/trystero.git"
  },
  "license": "MIT",
  "dependencies": {
    "@noble/secp256k1": "^3.0.0",
    "@supabase/supabase-js": "^2.49.8",
    "@waku/discovery": "^0.0.11",
    "@waku/sdk": "^0.0.34",
    "firebase": "^12.2.1",
    "libp2p": "^2.8.8",
    "mqtt": "^5.13.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.27.0",
    "@playwright/test": "^1.52.0",
    "@rollup/plugin-commonjs": "^28.0.2",
    "@rollup/plugin-node-resolve": "^16.0.0",
    "@rollup/plugin-replace": "^6.0.2",
    "@rollup/plugin-terser": "^0.4.4",
    "chai": "^6.0.1",
    "chalk": "^5.6.0",
    "eslint": "^9.27.0",
    "globals": "^16.2.0",
    "mocha": "^11.7.2",
    "nyc": "^17.1.0",
    "playwright": "^1.52.0",
    "prettier": "^3.5.2",
    "proxy-check": "^1.0.8",
    "puppeteer": "^24.18.0",
    "rollup": "^4.49.0",
    "serve": "^14.2.4",
    "sinon": "^21.0.0",
    "stun": "^1.1.0",
    "ws": "^8.18.2"
  },
  "scripts": {
    "prebuild": "node scripts/pre-build-check.js",
    "build": "rollup -c",
    "build:animations": "rollup -c rollup.config.animations.js",
    "build:wolf": "rollup -c rollup.config.wolf.js",
    "build:docs": "npm run build && npm run build:animations && npm run build:wolf && cp -r dist docs/ 2>/dev/null || true && cp src/wolf-animation.js docs/ && cp src/wolf-character.js docs/ && cp demo-wolf-animation.html docs/wolf-animation-demo.html && cp -r demo/* docs/ 2>/dev/null || true",
    "build:all": "npm run build && npm run build:animations && npm run build:wolf",
    "build:check": "node scripts/pre-build-check.js",
    "validate:github-pages": "node scripts/validate-github-pages.js",
    "predeploy": "npm run build:docs && npm run validate:github-pages",
    "wasm:build": "em++ wasm/game.cpp -O3 -s STANDALONE_WASM=1 -s WASM_BIGINT=1 -s EXPORT_ALL=0 -s ALLOW_MEMORY_GROWTH=1 -o docs/game.wasm",
    "get-bundle-sizes": "node scripts/get-bundle-sizes.js",
    "test": "playwright test ./test",
    "test-proxy": "PROXY=$(node scripts/find-proxy.js) npm run test",
    "test-ice": "node scripts/test-ice.js",
    "test-relays": "node scripts/test-relays.js",
    "test:unit": "mocha 'test/unit/**/*.test.js' --recursive",
    "test:coverage": "nyc --reporter=text --reporter=html npm run test:unit",
    "test:build": "mocha 'test/unit/build.test.js' 'test/unit/dependencies.test.js'",
    "test:github-pages": "mocha 'test/unit/github-pages-deployment.test.js'"
  },
  "keywords": [
    "webrtc",
    "p2p",
    "peer to peer",
    "chat",
    "pairing",
    "matchmaking",
    "serverless",
    "torrent",
    "bittorrent",
    "webtorrent",
    "ipfs",
    "mqtt",
    "nostr",
    "firebase",
    "realtime",
    "decentralized",
    "signaling",
    "pairing",
    "react",
    "supabase"
  ]
}
